pipeline {
    agent any
    stages {
        stage('Executar Pipeline Condicional') {
            steps {
                script {
                    if (env.BRANCH_NAME == 'dev') {
                        echo "Detectada branch 'dev'. Executando pipeline para o ambiente de Desenvolvimento (DES)."
                        dir('getting-started') {
                            sh './pipeline-dev.sh'
                        }
                    } else if (env.BRANCH_NAME == 'main') {
                        echo "Detectada branch 'main'. Executando pipeline para o ambiente de Produção (PRD)."
                        dir('getting-started') {
                            sh './pipeline-prd.sh'
                        }
                    } else {
                        echo "Branch ${env.BRANCH_NAME} não tem pipeline configurada. Ignorando."
                    }
                }
            }
        }
    }
}